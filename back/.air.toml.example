# Air設定ファイルの例
# ホットリロードの設定を定義します

# プロジェクトのルートディレクトリ
root = "."
# 一時ファイルの保存先
tmp_dir = "tmp"

[build]
# ビルドコマンド
cmd = "go build -o ./tmp/main ./cmd/api"
# ビルド後の実行ファイル
bin = "./tmp/main"
# 監視対象の拡張子
include_ext = ["go", "tpl", "tmpl", "html"]
# 監視除外ディレクトリ
exclude_dir = ["assets", "tmp", "vendor"]
# ファイル変更検知の遅延時間（ミリ秒）
delay = 1000
# プロセス終了の遅延時間
kill_delay = "0s"
# ビルドエラーログの出力先
log = "build-errors.log"
# 割り込みシグナルの送信
send_interrupt = false
# エラー発生時の停止
stop_on_error = true

[color]
# ログの色設定
main = "magenta"
watcher = "cyan"
build = "yellow"
runner = "green"

[log]
# ログの時間表示
time = false

[misc]
# 終了時のクリーンアップ
clean_on_exit = false
